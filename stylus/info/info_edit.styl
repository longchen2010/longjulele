@import '../head.styl'

.header
	.header-title
		color #323232

.info_cells
	background-color #fff
	margin-top 10px
	.info-cell
		display flex
		padding 0 12px
		line-height 40px
		border-bottom 1px solid #d6d7dc
		position relative
		&:after
			content ''
			position absolute
			top 50%
			right 15px
			display block
			width 16px
			height 30px
			margin-top -15px
			background url(../../img/content_list_right_icon@2x.png) no-repeat right 0 center
			background-size 50%
		.info-name
			flex 4
			font-size 0.7em
			color #646464

		.info-content
			flex 7
			text-indent 10px
			font-size 12px
			input
				border none
				width 100%
				outline none
				font-family Microsoft Yahei
		.complete
			position absolute
			color #ea5404
			right 15px
			display none

		.head
			background url(../../img/geren.png) no-repeat left 3px
			background-size 15%

	.image-cell
		display flex
		flex-direction row
		flex-wrap nowrap
		justify-content space-between
		padding 0 15px
		padding-top 22px
		.image-block
			.box-img
				width 90px
				height 64px
				background #878787
				border-radius 5px
			.title
				margin 0
				line-height 30px
				text-align center
				color #646464
				font-size 14px

.mask
	width 100%
	height 100%
	background rgba(0,0,0,0.3)
	position absolute
	top 0
	right 0
	left 0
	bottom 0
	display none

.upload-box
	background #fff
	position fixed
	bottom 0
	width 100%
	display none
	ul
		padding 0
		margin 0
		list-style none
		li
			height 45px
			line-height 45px
			text-align center
			border-bottom 1px solid #d6d7dc
			font-size 14px
			&.cancel
				color #ea5404
				border none

			.file
				position absolute
				bottom 55px
				left 30%
				opacity 0





