@import '../head.styl'

.header
	padding 0 12px
	.header-title
		color #323232
	.header-conf
		color #ea5404


.order-cell
	.order-title
		color #b4b4b4
		padding 10px 12px
		font-size 14px
	.order-con
		background-color #fff
		border-bottom  1px solid #d6d7dc
		display flex
		position relative
		padding 8px 12px
		.order-img
			width 40px
			height 40px
			background url(../../img/content_img_user@2x.png) no-repeat center
			background-size 100%
			margin-right 12px
		.order-text
			margin-top 5px
			span
				display block
				line-height 18px
			.order-iden
				font-size 14px
				color #646464
		.tel-icon
			width 18px
			height 18px
			background url(../../img/content_icon_call@2x.png) no-repeat right 0 center
			background-size 100%
			position absolute
			right 20px
			top 20px
			&:before
				content ''
				position absolute
				width 1px
				height 30px
				background-color #e1e1e1
				right 40px
				top -5px
		.order-time
			line-height 30px

		.reson-list
			padding 0
			margin 0
			list-style none
			.reson-li
				line-height 30px
				.checkbox
					width 18px
					height 18px
					display inline-block
					border 1px solid #d6d7dc
					border-radius 3px
					vertical-align middle
					margin-right 12px
				&.active
					.checkbox
						border 1px solid #ea5404
						background url(../../img/content_list_icon_right@2x.png) no-repeat center
						background-size 14px 10px
	.reson-box
		display block
		.reson-input
			display none
			border none
			outline none
			background-color #efeff4
			width 95%
			border-radius 5px
			font-size 14px
			padding 10px 10px
			color #b8b8b9
			margin-top 10px
			border 1px solid #d6d7dc


	.info
		display block
		.order-name
			line-height 30px
		.order-info
			color #646464
			font-size 14px
			span
				padding-right 50px
				display inline-block
				&:last-child
					padding-left 45px
					padding-right 0
					line-height 20px

.order-status
	.order-title
		color #b4b4b4
		padding 10px 12px
		font-size 14px

	.order-con2
		background-color #fff
		border-bottom  1px solid #d6d7dc
		display flex
		position relative
		padding 8px 12px
		.order-time
			flex 1
			line-height 30px
		.order-success
			text-align right
			line-height 30px
		.time-input
			outline none
			border none
			flex 1
			width 30%
			padding-left 70%
			font-family Microsoft Yahei
			line-height 30px

.btn-block
	padding 0 12px
	margin-top 44px
	.order-btn
	.sure-btn
		width 100%
		height 42px
		background-color #ea5404
		color #fff
		text-align center
		line-height 42px
		border-radius 5px

.footer
	position fixed
	bottom 0
	height 48px
	line-height 48px
	border-top 1px solid #d6d7dc
	background-color #fff
	width 100%
	display flex
	color #ea5404
	span
		flex 1
		text-align center
		display inline-block
		border-right 1px solid #d6d7dc
		&:last-child
			border 0
.upload-title
	text-align center
	margin-top 60px
	line-height 30px
	color #b4b4b4
	font-size 14px

.upoad-box
	width 220px
	height 145px
	border-radius 10px
	background-color #878787
	margin 0 auto
	margin-bottom 24px
	color #fff
	position relative
	.upload-img
		width 100px
		height 100px
		margin 0 auto
		padding-top 30px

		.upload-icon
			width 45px
			height 45px
			display block
			background url(../../img/content_icon_plus@2x.png) no-repeat center
			background-size 100%
			margin-left 20px
		.upload-txet
			line-height 30px
		.upload-file
			position absolute
			top 0
			left 0
			width 220px
			height 145px
			opacity 0


@import '../mask.styl'


