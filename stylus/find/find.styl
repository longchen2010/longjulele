$orange = #ED692B
body
  background-color #efefef
.header
  display flex
  height 50px
  background-color white
  .icon-back
    display block
    width 50px
    height 50px
    background url("../../images/set/nav_icon_back@2x.png")no-repeat center
    background-size 25%
  .header-title
    flex 1
    padding-right 50px
    line-height 50px
    text-align center
.header
  position absolute
  top 0
  z-index 3
  width 100%
  color #fff
  background-color transparent
  .icon-back
    width 65px
    padding-left 15px
    background transparent url("../../images/index/nav_icon_down@2x.png") no-repeat left 50px center
    background-size 12px 6px
    line-height 50px
    font-style normal
  .header-title
    padding-right 80px
.search-box
  position absolute
  top 50px
  right 15px
  left 15px
  z-index 5
  .search-input
    height 30px
    border-radius 3px
    background-color #f1f1f1
    text-align center
    line-height 30px
    color #999999
    .icon-search
      display inline-block
      width 30px
      height 30px
      background url("../../images/index/nav_icon_search@2x.png") no-repeat center
      background-size 16px
      vertical-align bottom
.slider-box
  position relative
  height 272px
  overflow hidden
  background black
  .slider-container
    width 1000%
    transition all 0.6s
    transform translateX(0)
    overflow hidden
    &:after
      content ""
      display block
      visibility hidden
      height 0
      clear both
.slider-block
  float left
  background-color bisque
  &:nth-child(2)
    background-color red
  &:nth-child(3)
    background-color pink
  &:nth-child(4)
    background-color greenyellow
  &:nth-child(5)
    background-color #0000ff
.point-box
  position absolute
  bottom 10%
  z-index 5
  left 32%
  height 16px
  text-align center
  .point-block
    display inline-block
    width 16px
    height 16px
    background url("../../images/index/banner_icon_point_nor@2x.png") no-repeat center
    background-size 10px
    .active
      background url("../../images/index/banner_icon_point_press@2x.png") no-repeat center
      background-size 10px
.query-box
  display flex
  width 100%
  height 50px
  margin-top 10px
  background-color #fff
  .query-block
    flex 1
    .active
      background-color #00a5e0
    .icon
      display block
      height 15px
      background url("../../images/index/content_icon02_nor@2x.png") no-repeat center
  .query-price
    width 50px
    height 50px
    background url("../../images/index/content_icon01_nor@2x.png") no-repeat center
    background-size 30px
    .active-down
      background url("../../images/index/content_icon01_down@2x.png") no-repeat center
      background-size 30px
    .active-up
      background url("../../images/index/content_icon01_litre@2x.png") no-repeat center
      background-size 30px
.block-box
  display flex
  padding 15px
  background-color #fff
  .img-box
    flex 2
  .info-box
    flex 5
  .info-price
    font-style normal
.down-box
  display none






