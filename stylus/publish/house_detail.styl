@import '../head.styl'
*
	margin 0
	padding 0
body
	background-color #121211
.header
	position absolute
	top 0
	z-index 5
	width 100%
	color #fff
	background-color transparent
	background url(../../img/banner_img_shadow@2x.png) no-repeat center top
	background-size 100% 50%
	border 0
	.icon-back
		background url(../../img/nav_back_icon02@2x.png) no-repeat center
		background-size 25%

.slider-container
	position relative
	width 375px
	height 240px
	overflow hidden
	.slider-text
		position absolute
		bottom 10px
		left 15px
		right 15px
		display flex
		color #fff
		.price-block
			font-size 14px
			flex 1
			.price
				color #ea5404
				font-size 16px
		.count-block
			flex 1
			text-align right
			font-size 14px
			.count
				font-size 18px


.house-info
	padding 0 12px
	.info-cell
		display flex
		height 45px
		line-height 45px
		border-top 1px solid #474743
		overflow hidden
		.info-cell-left
		.info-cell-right
			margin 0 10px
			flex 1
			position relative
			.info-name
				color #999
				font-size 12px
			.info-text
				float right
				font-size 14px
				color #fff
				.or-txt
					color #ea5404
					font-style normal
		.info-cell-left
			&:after
				content ''
				position absolute
				right -10px
				top 15px
				width 1px
				height 23px
				background-color #474743
		.one-side
			.info-text
				float none
				padding-left 35px
			&:after
				display none

	.info-txt
		font-size 12px
		color #999
		border-top 1px solid #474743
		padding-top 10px
		p
			line-height 18px

.edit-btn
	width 100%
	height 45px
	line-height 45px
	text-align center
	background-color #ea5404
	position fixed
	bottom 0
	color #fff

.mask
	display none
	width 100%
	height 100%
	background rgba(0,0,0,0.5)
	position absolute
	top 0
	right 0
	left 0
	bottom 0

.cancel-alert
	display none
	width 270px
	background #fff
	border-radius 10px
	position absolute
	left 50%
	top 50%
	margin-top -53px
	margin-left -135px
	text-align center
	overflow hidden
	.title
		height 46px
		line-height 46px
		margin 0
		font-size 14px
	.time-input
		width 35%
		height 32px
		outline none
		border none
		background-color #efeff4
		padding-left 65%
		border-top 1px solid #d6d7dc
		border-bottom 1px solid #d6d7dc
	.confirm
		color #ea5404
		display flex
		height 45px
		line-height 45px
		border-top 1px solid #d6d7dc
		margin-top 10px
		span
			flex 1
			text-align center
		.cancel
			border-right 1px solid #d6d7dc
			color #323232
