@import '../head.styl'

.header
	border-bottom 1px solid #d6d7dc
	.header-title
		color #323232
	.icon-back
		background transparent
		text-indent 1em
		color #ea5404
		font-size 14px

.city-box
	padding 0
	margin 0
	list-style none
	background-color #fff
	padding-left 10px
	min-height 550px
	.city-li
		height 37px
		line-height 37px
		position relative
		text-indent 0.5em
		&:after
			content ''
			position absolute
			bottom 0
			left 0
			right 0
			height 1px
			background-color #d6d7dc
