@import '../head.styl'
@import '../footer.styl'
*
	padding 0
	margin 0
ul
	list-style none
input
	outline none
	border none
.header
	position absolute
	top 0
	z-index 5
	width 100%
	color #fff
	background-color transparent
	border 0
	background url(../../img/banner_img_shadow@2x.png) no-repeat center top
	background-size 100% 50%
	&.active
		background #3c3c3b
		position fixed
	.icon-back
		width 65px
		padding-left 15px
		background transparent url(../../img/nav_icon_down@2x.png) no-repeat left 50px center
		background-size 12px 6px
		line-height 50px
		font-style normal
	.header-title
		padding-right 80px
		color #fff

.search_box
	position absolute
	top 50px
	right 15px
	left 15px
	z-index 5
	&.active
		top 10px
		left 20%
		right 20%
		position fixed
		.search_input
			height 32px
			line-height 32px
	.search_input
		height 30px
		border-radius 10px
		background-color rgba(176,224,244,1)
		text-align center
		line-height 30px
		color #999
		.icon-search
			display inline-block
			width 30px
			height 30px
			background url(../../img/nav_icon_search@2x.png) no-repeat center
			background-size 16px
			vertical-align bottom

.slider_box
	width 100%
	height 320px
	overflow hidden
	.slider_container
		width 400%
		transition all .5s
		transform translateX(0)
		&:after
			content ''
			display block
			visibility hidden
			height 0
			clear both
.slider_block
	float left
	width 375px
	height 320px
	background url(../../img/banner_img@2x.png) no-repeat center
	background-size 100% 100%
	&:nth-child(2)
		background url(../../img/banner_img02@2x.png) no-repeat center
		background-size 100% 100%
	&:nth-child(3)
		background url(../../img/content_img_home02@2x.png) no-repeat center
		background-size 100% 100%
	&:nth-child(4)
		background url(../../img/content_img_home03@2x.png) no-repeat center
		background-size 100% 100%
.point_box
	position relative
	top -30px
	z-index 4
	height 16px
	text-align center
	.point_block
		display inline-block
		width 16px
		height 16px
		background url(../../img/banner_icon_point_nor@2x.png) no-repeat center
		background-size 10px
		&.active
			background url(../../img/banner_icon_point_press@2x.png) no-repeat center
			background-size 10px
.query_box
	display flex
	z-index 5
	width 100%
	height 45px
	margin-top 10px
	background-color #fff
	border-bottom 1px solid #d6d7dc
	position relative
	&.active
		position fixed
		top 40px
	.query_block
		flex 1
		position relative
		&.active
			color #ea5404
			.icon
				background url(../../img/content_icon02_press@2x.png) no-repeat center 0px
				background-size 10px
		.text
			display block
			height 35px
			text-align center
			line-height 35px
			font-size 14px
		.icon
			display block
			height 15px
			background url(../../img/content_icon02_nor@2x.png) no-repeat center 0px
			background-size 10px
			margin-top -5px
		&:after
			content ''
			width 1px
			background #d6d7dc
			height 18px
			position absolute
			right 0
			top 15px
	.query_price
		flex 1
		width 45px
		height 45px
		background url(../../img/content_icon01_nor@2x.png) no-repeat center
		background-size 25px
		&.active-down
			background url(../../img/content_icon01_down@2x.png) no-repeat center
			background-size 25px
		&.active-up
			background url(../../img/content_icon01_litre@2x.png) no-repeat center
			background-size 25px

	.down-box
		display none
		position absolute
		top 46px
		width 100%
		height 420px
		background-color #f0f0f0
		display flex
		font-size 14px
		.box-left
			flex 1
			text-align left
			background-color #f0f0f0
			.left-li
				height 45px
				line-height 45px
				padding-left 10px
				&.active
					background-color #fff
		.box-right
			display none
			flex 1
			text-align left
			background-color #fff
			&.active
				display block
			.right-li
				height 45px
				line-height 45px
				margin-left 10px
				border-bottom 1px solid #e1e1e1
				&.all
					color #ea5404
	.area
		display block
		.box-center
			text-align center
			.left-li
				height 45px
				line-height 45px
				padding-left 10px
				&.active
					background-color #fff
				.area-input
					width 64px
					height 32px
					padding 0 5px
					border 1px solid #d6d7dc
					border-radius 3px
				.area-contact
					color #b4b4b4
					padding 0 10px
				.area-btn
					width 57px
					height 34px
					background-color #fff
					border 1px solid #d6d7dc
					border-radius 3px
					margin-left 5px

.price-tips
	width 105px
	height 25px
	background rgba(0,0,0,0.5)
	color #fff
	border-radius 20px
	margin 5px auto 10px
	font-size 12px
	line-height 25px
	text-align center
	display none

.overdue-list
	&.active
		position relative
		top 95px
	.overdue-cell
		background #fff
		padding 12px
		margin-bottom 10px
		display flex
		position relative
		.overdue-con
			padding-left 10px
			padding-top 5px
			h4
				font-weight 600
				font-size 14px
			p
				line-height 24px
				color #7f7f7f
				font-size 12px
			.overdue-btn
				width 4em
				padding 4px 10px
				border 1px solid #ea5404
				border-radius 5px
				color #ea5404
				font-size 12px
			.overdue-price
				color #ea5404
				font-weight 600
				font-size 14px
		.overdue-tips
			color #7f7f7f
			font-size 12px

			.collect
				position absolute
				right 12px
				top 20px
				width 40px
				height 36px
				background url(../../img/collect_icon_nor@2x.png) no-repeat
				display block
				background-size 50% 50%
				&.active
					background url(../../img/collect_icon_press@2x.png) no-repeat
					background-size 50% 50%
			.overdue-time
				position absolute
				bottom 20px
				right 12px

.toTop
	display none
	width 47px
	height 47px
	background url(../../img/content_btn_back@2x.png) no-repeat center
	background-size 100%
	position fixed
	right 20px
	bottom 90px
.mask
	display none
	width 100%
	height 100%
	background rgba(0,0,0,0.5)
	position fixed
	top 0
	right 0
	left 0
	bottom 0